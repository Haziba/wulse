<%= form_with url: session_path, class: "space-y-4", data: { turbo_frame: "_top" } do |f| %>
  <div>
    <%= f.label :email, "Email Address", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <div class="relative">
      <%= f.email_field :email, required: true, value: email,
          class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500 outline-none transition-colors pl-11",
          placeholder: "your.email@#{current_institution.subdomain}.edu" %>
      <i class="fas fa-envelope absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
    </div>
  </div>

  <div>
    <%= f.label :password, "Password", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <div class="relative">
      <%= f.password_field :password, required: true,
          class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500 outline-none transition-colors pl-11",
          placeholder: "Enter your password" %>
      <i class="fas fa-lock absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
    </div>
  </div>

  <div class="flex items-center justify-between">
    <div class="flex items-center">
      <%= f.check_box :remember_me, class: "h-4 w-4 text-brand-500 focus:ring-brand-500 border-gray-300 rounded" %>
      <%= f.label :remember_me, "Remember me", class: "ml-2 block text-sm text-gray-700" %>
    </div>
    <button type="button" class="text-sm text-brand-500 hover:text-brand-600 font-medium">
      Forgot password?
    </button>
  </div>

  <%= f.submit "Sign In",
      class: "w-full bg-brand-500 text-white py-3 px-4 rounded-lg hover:bg-brand-600 focus:ring-4 focus:ring-brand-200 transition-colors font-medium",
      data: { turbo_submits_with: "Signing in..." } %>
<% end %>
