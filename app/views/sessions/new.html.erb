<!-- Login Section -->
<section class="flex items-center justify-center py-8 min-h-[calc(100vh-280px)]">
  <div class="max-w-md w-full mx-auto px-6">
    <!-- Login Card -->
    <div class="bg-white rounded-2xl shadow-xl border border-gray-200 p-8">
      <div class="text-center mb-6">
        <% if current_institution.logo.attached? %>
          <%= image_tag current_institution.logo, alt: "#{current_institution.name.titleize} Logo", class: "w-20 h-20 mx-auto mb-4 object-contain" %>
        <% else %>
          <div class="w-20 h-20 bg-burgundy-500 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-user-graduate text-white text-3xl"></i>
          </div>
        <% end %>
        <h2 class="font-serif text-3xl font-bold text-gray-900 mb-2">Welcome Back</h2>
        <p class="text-gray-600">Sign in to manage your digital library</p>
      </div>

      <!-- Login Form -->
      <%= form_with url: session_path, class: "space-y-4" do |f| %>
        <div>
          <%= f.label :email, "Email Address", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="relative">
            <%= f.email_field :email, required: true,
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-burgundy-500 focus:border-burgundy-500 outline-none transition-colors pl-11",
                placeholder: "your.email@#{current_institution.subdomain}.edu" %>
            <i class="fas fa-envelope absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
          </div>
        </div>

        <div>
          <%= f.label :password, "Password", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="relative">
            <%= f.password_field :password, required: true,
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-burgundy-500 focus:border-burgundy-500 outline-none transition-colors pl-11",
                placeholder: "Enter your password" %>
            <i class="fas fa-lock absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
          </div>
        </div>

        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "h-4 w-4 text-burgundy-500 focus:ring-burgundy-500 border-gray-300 rounded" %>
            <%= f.label :remember_me, "Remember me", class: "ml-2 block text-sm text-gray-700" %>
          </div>
          <button type="button" class="text-sm text-burgundy-500 hover:text-burgundy-600 font-medium">
            Forgot password?
          </button>
        </div>

        <%= f.submit "Sign In",
            class: "w-full bg-burgundy-500 text-white py-3 px-4 rounded-lg hover:bg-burgundy-600 focus:ring-4 focus:ring-burgundy-200 transition-colors font-medium",
            data: { turbo_submits_with: "Signing in..." } %>
      <% end %>

    </div>
  </div>
</section>
