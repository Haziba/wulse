<!-- Login Section -->
<section class="flex items-center justify-center py-8 min-h-[calc(100vh-280px)]">
  <div class="max-w-md w-full mx-auto px-6">
    <!-- Login Card -->
    <div class="bg-white rounded-2xl shadow-xl border border-gray-200 p-8">
      <div class="text-center mb-6">
        <% if current_institution.logo.attached? %>
          <%= image_tag current_institution.logo, alt: "#{current_institution.name.titleize} Logo", class: "w-20 h-20 mx-auto mb-4 object-contain" %>
        <% else %>
          <div class="w-20 h-20 bg-burgundy-500 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-user-graduate text-white text-3xl"></i>
          </div>
        <% end %>
        <h2 class="font-serif text-3xl font-bold text-gray-900 mb-2">Welcome Back</h2>
        <p class="text-gray-600">Sign in to manage your digital library</p>
      </div>

      <!-- Login Form (Turbo Frame for seamless updates) -->
      <%= turbo_frame_tag "sign_in_form" do %>
        <%= render "form", email: params[:email] %>
      <% end %>

    </div>
  </div>
</section>
