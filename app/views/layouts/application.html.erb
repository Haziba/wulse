<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "University Research Library" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= javascript_importmap_tags %>

    <%= yield :head %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="apple-touch-icon" href="/icon.png">
    <%# Google Fonts %>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <%# Font Awesome %>
    <script> window.FontAwesomeConfig = { autoReplaceSvg: 'nest'};</script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <%# Tailwind CSS %>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      <%
        branding_colour = current_institution&.branding_colour || "#e0486d"
        color_shades = generate_color_shades(branding_colour)
      %>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              brand: {
                50: '<%= color_shades[50] %>',
                100: '<%= color_shades[100] %>',
                200: '<%= color_shades[200] %>',
                300: '<%= color_shades[300] %>',
                400: '<%= color_shades[400] %>',
                500: '<%= color_shades[500] %>',
                600: '<%= color_shades[600] %>',
                700: '<%= color_shades[700] %>',
                800: '<%= color_shades[800] %>',
                900: '<%= color_shades[900] %>',
              }
            },
            fontFamily: {
              'serif': ['Playfair Display', 'serif'],
              'sans': ['Inter', 'sans-serif'],
            }
          }
        }
      }
    </script>
  </head>

  <body class="bg-white font-sans">
    <!-- Brand Strip -->
    <div class="h-2 bg-gradient-to-r from-brand-900 via-brand-700 to-brand-900"></div>

    <!-- Header -->
    <header class="bg-white border-b border-gray-200 sticky top-0 z-50 shadow-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
        <div class="flex items-center justify-between gap-8">
          <!-- Logo -->
          <%= link_to "/", class: "flex items-center gap-3 flex-shrink-0" do %>
            <% if current_institution.logo.attached? %>
              <%= image_tag current_institution.logo, alt: "#{current_institution.name.titleize} Logo", class: "h-10 w-10" %>
            <% end %>
            <span class="font-serif text-xl font-bold text-brand-900"><%= current_institution.name.titleize %></span>
          <% end %>

          <!-- Search Bar (Desktop) -->
          <form action="/library" method="get" class="hidden md:flex flex-1 max-w-xl">
            <input type="text" name="q" placeholder="Search publications, authors, keywords..." class="flex-1 px-4 py-2 border border-gray-300 rounded-l-lg focus:outline-none focus:ring-2 focus:ring-brand-600 focus:border-transparent">
            <button type="submit" class="px-6 py-2 bg-brand-900 text-white rounded-r-lg hover:bg-brand-800 transition-colors font-medium">
              Search
            </button>
          </form>

          <!-- Navigation -->
          <nav class="hidden lg:flex items-center gap-6">
            <a href="/" class="text-gray-600 hover:text-brand-900 transition-colors font-medium">Browse</a>
            <a href="/collections" class="text-gray-600 hover:text-brand-900 transition-colors font-medium">Collections</a>
            <a href="/authors" class="text-gray-600 hover:text-brand-900 transition-colors font-medium">Authors</a>
            <a href="/help" class="text-gray-600 hover:text-brand-900 transition-colors font-medium">Help</a>
            <a href="<%= new_session_path %>" class="text-brand-900 hover:text-brand-700 transition-colors font-semibold">Admin</a>
          </nav>
        </div>

        <!-- Mobile Search -->
        <form action="/library" method="get" class="md:hidden mt-4 flex">
          <input type="text" name="q" placeholder="Search..." class="flex-1 px-4 py-2 border border-gray-300 rounded-l-lg focus:outline-none focus:ring-2 focus:ring-brand-600">
          <button type="submit" class="px-4 py-2 bg-brand-900 text-white rounded-r-lg hover:bg-brand-800 transition-colors">
            <i class="fas fa-search"></i>
          </button>
        </form>
      </div>
    </header>

    <!-- Flash Messages -->
    <div id="toast-container-target" class="fixed bottom-8 left-1/2 transform -translate-x-1/2 z-50 w-full max-w-md px-4">
      <%= render 'shared/toast_flash' %>
    </div>

    <!-- Main Content -->
    <main class="bg-white">
      <%= yield %>
    </main>

    <!-- Footer -->
    <footer class="bg-gradient-to-r from-brand-900 via-brand-800 to-brand-900 text-white mt-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="text-center">
          <div class="flex flex-wrap justify-center gap-8 mb-6">
            <a href="/about" class="hover:text-brand-200 transition-colors">About</a>
            <a href="/contact" class="hover:text-brand-200 transition-colors">Contact Us</a>
          </div>
          <p class="text-brand-200 text-sm">Â© <%= Time.current.year %> University Research Library. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </body>
</html>
