<% content_for(:title) { "Login" } %>

<h2>Wulse Admin</h2>

<%= form_tag admin_login_path, method: :post do %>
  <fieldset class="inputs">
    <ol>
      <li class="string input required stringish" id="admin_email_input">
        <%= label_tag :email, "Email" %>
        <%= email_field_tag :email, params[:email], autofocus: true, required: true %>
      </li>
      <li class="password input required stringish" id="admin_password_input">
        <%= label_tag :password, "Password" %>
        <%= password_field_tag :password, nil, required: true %>
      </li>
    </ol>
  </fieldset>
  <fieldset class="actions">
    <ol>
      <li class="action input_action" id="admin_submit_action">
        <%= submit_tag "Login" %>
      </li>
    </ol>
  </fieldset>
<% end %>
