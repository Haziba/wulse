<!-- Hero Section -->
<section class="bg-gradient-to-br from-brand-900 via-brand-800 to-brand-900 text-white py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h1 class="font-serif text-5xl md:text-6xl font-bold mb-6">Discover Academic Excellence</h1>
    <p class="text-xl md:text-2xl text-brand-100 mb-10 max-w-3xl mx-auto">
      Access thousands of research papers, theses, and academic journals from the University of Wulse community
    </p>

    <!-- Hero Search -->
    <form action="/library" method="get" class="max-w-2xl mx-auto mb-8">
      <div class="flex flex-col sm:flex-row gap-2">
        <input type="text" name="q" placeholder="Search publications, authors, keywords..." class="flex-1 px-6 py-4 rounded-lg text-gray-900 text-lg focus:outline-none focus:ring-4 focus:ring-brand-300">
        <button type="submit" class="px-8 py-4 bg-white text-brand-900 rounded-lg hover:bg-brand-50 transition-colors font-semibold text-lg">
          Search
        </button>
      </div>
    </form>
  </div>
</section>

<!-- Recently Added -->
<section class="py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center mb-12">
      <div>
        <h2 class="font-serif text-4xl font-bold text-gray-900 mb-2">Recently Added</h2>
        <p class="text-xl text-gray-600">Latest research and publications</p>
      </div>
      <%= link_to library_path, class: "text-brand-900 font-semibold hover:text-brand-700 transition-colors hidden md:block" do %>
        View All â†’
      <% end %>
    </div>

    <div class="space-y-6">
      <% @recent_documents.each do |document| %>
        <%= render "library/document_card", document: document %>
      <% end %>
    </div>
  </div>
</section>
