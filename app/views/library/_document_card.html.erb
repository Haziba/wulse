<div class="bg-white p-6 rounded-lg border border-gray-200 hover:shadow-lg transition-shadow">
  <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
    <div class="flex-1">
      <h3 class="text-xl font-semibold text-gray-900 mb-2 hover:text-brand-900 transition-colors">
        <%= link_to document.title, library_read_path(document), data: { turbo_frame: "_top" } %>
      </h3>
      <p class="text-gray-600 text-sm mb-3"><%= document.author %>, <%= time_ago_in_words(document.created_at) %> ago</p>
    </div>
    <div class="flex gap-2">
      <%= link_to library_read_path(document), class: "px-6 py-2 bg-brand-900 text-white rounded-lg hover:bg-brand-800 transition-colors font-medium text-center", data: { turbo_frame: "_top" } do %>
        Read
      <% end %>
      <% if document.file.attached? %>
        <%= link_to rails_blob_path(document.file, disposition: "attachment"), class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors font-medium text-center" do %>
          <i class="fas fa-download"></i>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
