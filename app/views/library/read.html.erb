<%
  # Determine reader type based on file content type
  is_epub = @document.file.attached? && @document.file.content_type == 'application/epub+zip'
  reader_type = is_epub ? 'epub-reader' : 'pdf-reader'
%>
    <div id="reader-interface"
         class="flex bg-white overflow-hidden"
         style="height: calc(100vh - 81px);"
         data-controller="<%= reader_type %>"
         data-<%= reader_type %>-url-value="<%= @document.file.attached? ? rails_blob_url(@document.file) : '' %>"
         data-<%= reader_type %>-document-title-value="<%= @document.title %>"
         data-action="keydown@document-><%= reader_type %>#handleKeydown">
        <main id="reading-area" class="flex-1 flex flex-col min-h-0 min-w-0">
            <div id="reader-toolbar" class="flex-shrink-0 flex items-center justify-between p-4 bg-gray-50 border-b border-gray-200">
                <div class="flex items-center space-x-4">
                    <button data-action="click-><%= reader_type %>#toggleSidebar" class="text-gray-600 hover:text-burgundy-500">
                        <i class="fas fa-bars text-lg"></i>
                    </button>
                    <div id="toolbar-info" class="text-sm text-gray-600">
                        <span data-<%= reader_type %>-target="toolbarPageInfo">Loading...</span>
                    </div>
                </div>
                <div class="flex items-center space-x-4">
                    <% if @document.file.attached? %>
                        <%= link_to rails_blob_path(@document.file, disposition: "attachment"), class: "text-gray-600 hover:text-burgundy-500", title: "Download PDF" do %>
                            <i class="fas fa-download"></i>
                        <% end %>
                    <% end %>
                    <button data-action="click-><%= reader_type %>#toggleDarkMode" class="text-gray-600 hover:text-burgundy-500">
                        <i class="fas fa-adjust"></i>
                    </button>
                    <button data-action="click-><%= reader_type %>#toggleFullscreen" class="text-gray-600 hover:text-burgundy-500">
                        <i class="fas fa-expand"></i>
                    </button>
                </div>
            </div>

            <aside data-<%= reader_type %>-target="sidebar" class="flex-shrink-0 bg-gray-50 border-r border-gray-200 transition-all duration-300 ease-in-out overflow-hidden w-0 fixed left-0 z-10">
                <div class="w-80 h-full flex flex-col min-w-0">
                    <div id="sidebar-header" class="p-6 border-b border-gray-200">
                    <div class="flex items-center justify-between mb-4">
                        <div class="flex items-center space-x-3">
                            <button data-action="click-><%= reader_type %>#closeSidebar" class="text-gray-500 hover:text-gray-700">
                                <i class="fas fa-times"></i>
                            </button>
                            <h2 class="font-semibold text-gray-900">Table of Contents</h2>
                        </div>
                        <%= link_to library_path, class: "text-gray-600 hover:text-burgundy-500" do %>
                            <i class="fas fa-arrow-left text-lg"></i>
                        <% end %>
                    </div>
                    <div class="text-sm text-gray-600">
                        <p class="font-medium"><%= @document.title %></p>
                        <% if @document.authors.present? %>
                            <p><%= @document.authors %></p>
                        <% end %>
                    </div>
                </div>

                <div id="chapters-list" class="flex-1 overflow-y-auto p-4">
                    <div data-<%= reader_type %>-target="outlineContainer" class="space-y-2">
                        <div class="text-sm text-gray-500 text-center py-8">
                            Loading table of contents...
                        </div>
                    </div>
                </div>

                <div id="navigation-controls" class="p-4 border-t border-gray-200">
                    <div class="space-y-4">
                        <div class="grid grid-cols-2 gap-2">
                            <button data-action="click-><%= reader_type %>#gotoStart" class="flex items-center justify-center space-x-2 p-2 bg-gray-100 hover:bg-gray-200 rounded-lg text-sm">
                                <i class="fas fa-fast-backward"></i>
                                <span>Start</span>
                            </button>
                            <button data-action="click-><%= reader_type %>#gotoEnd" class="flex items-center justify-center space-x-2 p-2 bg-gray-100 hover:bg-gray-200 rounded-lg text-sm">
                                <i class="fas fa-fast-forward"></i>
                                <span>End</span>
                            </button>
                        </div>

                        <div class="space-y-2">
                            <label class="text-xs font-medium text-gray-700">Go to Page:</label>
                            <div class="flex space-x-2">
                                <input data-<%= reader_type %>-target="pageJumpInput" data-action="keypress-><%= reader_type %>#handlePageJumpKeypress" type="number" value="1" min="1" class="flex-1 px-3 py-2 border border-gray-300 rounded-lg text-sm focus:border-burgundy-500 focus:outline-none">
                                <button data-action="click-><%= reader_type %>#jumpToPage" class="px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded-lg text-sm">Go</button>
                            </div>
                        </div>
                    </div>
                </div>
                </div>
            </aside>

            <div data-<%= reader_type %>-target="documentContent" class="flex-1 overflow-y-auto bg-white min-h-0 relative">
                <div data-<%= reader_type %>-target="loading" class="absolute inset-0 flex items-center justify-center bg-white z-10">
                    <div class="text-center">
                        <i class="fas fa-spinner fa-spin text-4xl text-burgundy-500 mb-4"></i>
                        <p class="text-gray-600">Loading <%= is_epub ? 'EPUB' : 'PDF' %>...</p>
                    </div>
                </div>
                <div data-<%= reader_type %>-target="container" class="<%= is_epub ? 'w-full h-full' : 'flex justify-center p-8' %>">
                    <% unless is_epub %>
                      <canvas data-<%= reader_type %>-target="canvas" class="shadow-lg max-w-full"></canvas>
                    <% end %>
                </div>
            </div>

            <div id="page-navigation" class="flex-shrink-0 flex items-center justify-between p-4 bg-gray-50 border-t border-gray-200">
                <button data-<%= reader_type %>-target="prevButton" data-action="click-><%= reader_type %>#prevPage" class="flex items-center space-x-2 px-4 py-2 text-gray-600 hover:text-burgundy-500 hover:bg-white rounded-lg transition-colors disabled:opacity-50 disabled:cursor-not-allowed">
                    <i class="fas fa-chevron-left"></i>
                    <span>Previous Page</span>
                </button>

                <div class="flex items-center space-x-4">
                    <span data-<%= reader_type %>-target="pageIndicator" class="text-sm text-gray-600">1 / 1</span>
                    <div class="w-48 bg-gray-200 rounded-full h-2">
                        <div data-<%= reader_type %>-target="progressBar" class="bg-brand-500 h-2 rounded-full transition-all" style="width: 0%"></div>
                    </div>
                </div>

                <button data-<%= reader_type %>-target="nextButton" data-action="click-><%= reader_type %>#nextPage" class="flex items-center space-x-2 px-4 py-2 text-gray-600 hover:text-burgundy-500 hover:bg-white rounded-lg transition-colors disabled:opacity-50 disabled:cursor-not-allowed">
                    <span>Next Page</span>
                    <i class="fas fa-chevron-right"></i>
                </button>
            </div>
        </main>
    </div>
