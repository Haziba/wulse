<!-- Password Reset Section -->
<section class="flex items-center justify-center py-8 min-h-[calc(100vh-280px)]">
  <div class="max-w-md w-full mx-auto px-6">
    <!-- Password Reset Card -->
    <div class="bg-white rounded-2xl shadow-xl border border-gray-200 p-8">
      <div class="text-center mb-6">
        <% if @password_reset.staff.institution.logo.attached? %>
          <%= image_tag @password_reset.staff.institution.logo, alt: "#{@password_reset.staff.institution.name.titleize} Logo", class: "w-20 h-20 mx-auto mb-4 object-contain" %>
        <% else %>
          <div class="w-20 h-20 bg-brand-500 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-key text-white text-3xl"></i>
          </div>
        <% end %>
        <h2 class="font-serif text-3xl font-bold text-gray-900 mb-2">Reset Password</h2>
        <p class="text-gray-600">Enter your new password below</p>
      </div>

      <!-- Password Reset Form -->
      <%= form_with model: @password_reset, url: password_reset_path(@password_reset.token), method: :patch, class: "space-y-4" do |form| %>
        <div>
          <%= form.label :password, "New Password", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.password_field :password, required: true, autocomplete: "new-password", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-transparent" %>
        </div>

        <div>
          <%= form.label :password_confirmation, "Confirm New Password", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-transparent" %>
        </div>

        <div>
          <%= form.submit "Reset Password", class: "w-full bg-brand-500 text-white py-2 px-4 rounded-lg hover:bg-brand-600 transition-colors font-medium" %>
        </div>
      <% end %>

      <div class="mt-6 text-center">
        <%= link_to "Back to Sign In", new_session_path, class: "text-brand-500 hover:text-brand-600 font-medium" %>
      </div>
    </div>
  </div>
</section>
