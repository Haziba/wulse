<!-- Forgot Password Section -->
<section class="flex items-center justify-center py-8 min-h-[calc(100vh-280px)]">
  <div class="max-w-md w-full mx-auto px-6">
    <!-- Card -->
    <div class="bg-white rounded-2xl shadow-xl border border-gray-200 p-8">
      <div class="text-center mb-6">
        <% if current_institution.logo.attached? %>
          <%= image_tag current_institution.logo, alt: "#{current_institution.name.titleize} Logo", class: "w-20 h-20 mx-auto mb-4 object-contain" %>
        <% else %>
          <div class="w-20 h-20 bg-brand-500 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-user-graduate text-white text-3xl"></i>
          </div>
        <% end %>
        <h2 class="font-serif text-3xl font-bold text-gray-900 mb-2">Forgot Password</h2>
        <p class="text-gray-600">Enter your email to receive reset instructions</p>
      </div>

      <!-- Form -->
      <%= form_with url: password_resets_path, method: :post, class: "space-y-4" do |f| %>
        <div>
          <%= f.label :email, "Email Address", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="relative">
            <%= f.email_field :email, required: true,
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500 outline-none transition-colors pl-11",
                placeholder: "your.email@#{current_institution.subdomain}.edu" %>
            <i class="fas fa-envelope absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
          </div>
        </div>

        <%= f.submit "Send Reset Instructions",
            class: "w-full bg-brand-500 text-white py-3 px-4 rounded-lg hover:bg-brand-600 focus:ring-4 focus:ring-brand-200 transition-colors font-medium cursor-pointer",
            data: { turbo_submits_with: "Sending..." } %>

        <div class="text-center">
          <%= link_to "Back to Sign In", new_session_path, class: "text-sm text-brand-500 hover:text-brand-600 font-medium" %>
        </div>
      <% end %>
    </div>
  </div>
</section>
