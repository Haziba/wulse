<!-- Main Content -->
<div class="max-w-7xl mx-auto px-6 py-8">
  <!-- Dashboard Header -->
  <div class="mb-8">
    <h2 class="font-serif text-3xl font-bold text-gray-900 mb-2">Dashboard</h2>
    <p class="text-gray-600">Manage your institution's documents and staff members</p>
  </div>

  <!-- Stats Cards -->
  <div class="grid md:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-xl p-6 border border-gray-200">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-600 mb-1">Total Documents</p>
          <p class="text-2xl font-bold text-gray-900"><%= number_with_delimiter(@stats[:total_documents]) %></p>
        </div>
        <div class="w-12 h-12 bg-brand-100 rounded-lg flex items-center justify-center">
          <i class="fas fa-file-alt text-brand-500 text-xl"></i>
        </div>
      </div>
      <div class="mt-4 flex items-center text-sm">
        <i class="fas fa-arrow-up text-green-500 mr-1"></i>
        <span class="text-green-500">12%</span>
        <span class="text-gray-500 ml-1">vs last month</span>
      </div>
    </div>

    <div class="bg-white rounded-xl p-6 border border-gray-200">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-600 mb-1">Active Staff</p>
          <p class="text-2xl font-bold text-gray-900"><%= @stats[:active_staff] %></p>
        </div>
        <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
          <i class="fas fa-users text-blue-500 text-xl"></i>
        </div>
      </div>
      <div class="mt-4 flex items-center text-sm">
        <i class="fas fa-arrow-up text-green-500 mr-1"></i>
        <span class="text-green-500">5%</span>
        <span class="text-gray-500 ml-1">vs last month</span>
      </div>
    </div>

    <div class="bg-white rounded-xl p-6 border border-gray-200">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-600 mb-1">Pending Reviews</p>
          <p class="text-2xl font-bold text-gray-900"><%= @stats[:pending_reviews] %></p>
        </div>
        <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center">
          <i class="fas fa-clock text-orange-500 text-xl"></i>
        </div>
      </div>
      <div class="mt-4 flex items-center text-sm">
        <i class="fas fa-arrow-down text-red-500 mr-1"></i>
        <span class="text-red-500">8%</span>
        <span class="text-gray-500 ml-1">vs last week</span>
      </div>
    </div>

    <div class="bg-white rounded-xl p-6 border border-gray-200">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-600 mb-1">Storage Used</p>
          <p class="text-2xl font-bold text-gray-900"><%= number_to_human_size(@stats[:storage_used]) %></p>
        </div>
        <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
          <i class="fas fa-database text-purple-500 text-xl"></i>
        </div>
      </div>
      <div class="mt-4 flex items-center text-sm">
        <span class="text-gray-500">of <%= number_to_human_size(@stats[:storage_total]) %> total</span>
      </div>
    </div>
  </div>

  <!-- Main Content Grid -->
  <div class="grid lg:grid-cols-3 gap-8">
    <!-- Recent Documents -->
    <div class="lg:col-span-2">
      <div class="bg-white rounded-xl border border-gray-200">
        <div class="p-6 border-b border-gray-200">
          <div class="flex justify-between items-center">
            <h3 class="font-serif text-xl font-semibold text-gray-900">Recent Documents</h3>
            <button class="text-brand-500 hover:text-brand-600 font-medium">View All</button>
          </div>
        </div>
        <div class="p-6">
          <div class="space-y-4">
            <div class="flex items-center justify-between p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
              <div class="flex items-center space-x-4">
                <div class="w-10 h-10 bg-red-100 rounded-lg flex items-center justify-center">
                  <i class="fas fa-file-pdf text-red-500"></i>
                </div>
                <div>
                  <h4 class="font-medium text-gray-900">Neural Networks Research Paper</h4>
                  <p class="text-sm text-gray-500">Uploaded by Dr. Michael Davis • 2 hours ago</p>
                </div>
              </div>
              <div class="flex items-center space-x-2">
                <span class="bg-green-100 text-green-700 px-3 py-1 rounded-full text-xs font-medium">Published</span>
                <button class="text-gray-400 hover:text-brand-500">
                  <i class="fas fa-ellipsis-v"></i>
                </button>
              </div>
            </div>

            <div class="flex items-center justify-between p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
              <div class="flex items-center space-x-4">
                <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
                  <i class="fas fa-file-word text-blue-500"></i>
                </div>
                <div>
                  <h4 class="font-medium text-gray-900">Climate Change Analysis</h4>
                  <p class="text-sm text-gray-500">Uploaded by Prof. Emma Wilson • 5 hours ago</p>
                </div>
              </div>
              <div class="flex items-center space-x-2">
                <span class="bg-yellow-100 text-yellow-700 px-3 py-1 rounded-full text-xs font-medium">Review</span>
                <button class="text-gray-400 hover:text-brand-500">
                  <i class="fas fa-ellipsis-v"></i>
                </button>
              </div>
            </div>

            <div class="flex items-center justify-between p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
              <div class="flex items-center space-x-4">
                <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
                  <i class="fas fa-file-excel text-green-500"></i>
                </div>
                <div>
                  <h4 class="font-medium text-gray-900">Research Data Analysis</h4>
                  <p class="text-sm text-gray-500">Uploaded by Dr. James Liu • 1 day ago</p>
                </div>
              </div>
              <div class="flex items-center space-x-2">
                <span class="bg-red-100 text-red-700 px-3 py-1 rounded-full text-xs font-medium">Draft</span>
                <button class="text-gray-400 hover:text-brand-500">
                  <i class="fas fa-ellipsis-v"></i>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Column -->
    <div>
      <!-- Staff Overview -->
      <div class="bg-white rounded-xl border border-gray-200 mb-6">
        <div class="p-6 border-b border-gray-200">
          <div class="flex justify-between items-center">
            <h3 class="font-serif text-xl font-semibold text-gray-900">Staff Overview</h3>
            <button class="text-brand-500 hover:text-brand-600">
              <i class="fas fa-cog"></i>
            </button>
          </div>
        </div>
        <div class="p-6">
          <div class="space-y-4">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-3">
                <div class="w-10 h-10 bg-brand-500 rounded-full flex items-center justify-center">
                  <span class="text-white text-sm font-medium">MD</span>
                </div>
                <div>
                  <p class="font-medium text-gray-900">Dr. Michael Davis</p>
                  <p class="text-sm text-gray-500">Environmental Science</p>
                </div>
              </div>
              <span class="w-3 h-3 bg-green-500 rounded-full"></span>
            </div>

            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-3">
                <div class="w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center">
                  <span class="text-white text-sm font-medium">EW</span>
                </div>
                <div>
                  <p class="font-medium text-gray-900">Prof. Emma Wilson</p>
                  <p class="text-sm text-gray-500">Biomedical Engineering</p>
                </div>
              </div>
              <span class="w-3 h-3 bg-green-500 rounded-full"></span>
            </div>

            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-3">
                <div class="w-10 h-10 bg-purple-500 rounded-full flex items-center justify-center">
                  <span class="text-white text-sm font-medium">JL</span>
                </div>
                <div>
                  <p class="font-medium text-gray-900">Dr. James Liu</p>
                  <p class="text-sm text-gray-500">Physics Department</p>
                </div>
              </div>
              <span class="w-3 h-3 bg-yellow-500 rounded-full"></span>
            </div>
          </div>
          <button class="w-full mt-4 text-brand-500 hover:text-brand-600 font-medium text-sm">
            Manage All Staff →
          </button>
        </div>
      </div>

      <!-- Recent Activity -->
      <div class="bg-white rounded-xl border border-gray-200">
        <div class="p-6 border-b border-gray-200">
          <h3 class="font-serif text-xl font-semibold text-gray-900">Recent Activity</h3>
        </div>
        <div class="p-6">
          <div class="space-y-4">
            <div class="flex items-start space-x-3">
              <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0">
                <i class="fas fa-upload text-green-500 text-sm"></i>
              </div>
              <div>
                <p class="text-sm text-gray-900">New document uploaded</p>
                <p class="text-xs text-gray-500">2 hours ago</p>
              </div>
            </div>

            <div class="flex items-start space-x-3">
              <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0">
                <i class="fas fa-user-plus text-blue-500 text-sm"></i>
              </div>
              <div>
                <p class="text-sm text-gray-900">New staff member added</p>
                <p class="text-xs text-gray-500">5 hours ago</p>
              </div>
            </div>

            <div class="flex items-start space-x-3">
              <div class="w-8 h-8 bg-orange-100 rounded-full flex items-center justify-center flex-shrink-0">
                <i class="fas fa-edit text-orange-500 text-sm"></i>
              </div>
              <div>
                <p class="text-sm text-gray-900">Document updated</p>
                <p class="text-xs text-gray-500">1 day ago</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
