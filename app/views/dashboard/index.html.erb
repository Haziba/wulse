<!-- Main Content -->
<div class="max-w-7xl mx-auto px-6 py-8">
  <!-- Dashboard Header -->
  <div class="mb-8">
    <h2 class="font-serif text-3xl font-bold text-gray-900 mb-2">Dashboard</h2>
    <p class="text-gray-600">Manage your institution's documents and staff members</p>
  </div>

  <!-- Stats Cards -->
  <div class="grid md:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-xl p-6 border border-gray-200">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-600 mb-1">Total Documents</p>
          <p class="text-2xl font-bold text-gray-900"><%= number_with_delimiter(@stats[:total_documents]) %></p>
        </div>
        <div class="w-12 h-12 bg-brand-100 rounded-lg flex items-center justify-center">
          <i class="fas fa-file-alt text-brand-500 text-xl"></i>
        </div>
      </div>
      <% if @stats[:documents_change].present? && @stats[:documents_change] != 0 %> 
        <div class="mt-4 flex items-center text-sm">
          <% if @stats[:documents_change] > 0 %>
            <i class="fas fa-arrow-up text-green-500 mr-1"></i>
          <% else %>
            <i class="fas fa-arrow-down text-red-500 mr-1"></i>
          <% end %>
          <span class="<%= @stats[:documents_change] > 0 ? 'text-green-500' : 'text-red-500' %>"><%= number_with_delimiter(@stats[:documents_change]) %></span>
          <span class="text-gray-500 ml-1">vs last month</span>
        </div>
      <% end %>
    </div>

    <div class="bg-white rounded-xl p-6 border border-gray-200">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-600 mb-1">Active Staff</p>
          <p class="text-2xl font-bold text-gray-900"><%= @stats[:active_staff] %></p>
        </div>
        <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
          <i class="fas fa-users text-blue-500 text-xl"></i>
        </div>
      </div>
      <% if @stats[:staff_change].present? && @stats[:staff_change] != 0 %>
        <div class="mt-4 flex items-center text-sm">
          <% if @stats[:staff_change] > 0 %>
            <i class="fas fa-arrow-up text-green-500 mr-1"></i>
          <% else %>
            <i class="fas fa-arrow-down text-red-500 mr-1"></i>
          <% end %>
          <span class="<%= @stats[:staff_change] > 0 ? 'text-green-500' : 'text-red-500' %>"><%= number_with_delimiter(@stats[:staff_change]) %></span>
          <span class="text-gray-500 ml-1">vs last month</span>
        </div>
      <% end %>
    </div>

    <div class="bg-white rounded-xl p-6 border border-gray-200">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-600 mb-1">Storage Used</p>
          <p class="text-2xl font-bold text-gray-900"><%= number_to_human_size(@stats[:storage_used]) %></p>
          <p class="text-sm text-gray-500">of <%= number_to_human_size(current_institution.storage_total) %></p>
        </div>
        <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
          <i class="fas fa-database text-purple-500 text-xl"></i>
        </div>
      </div>
      <% if @stats[:storage_used_change].present? && @stats[:storage_used_change] != 0 %>
        <div class="mt-4 flex items-center text-sm">
          <% if @stats[:storage_used_change] > 0 %>
            <i class="fas fa-arrow-up text-green-500 mr-1"></i>
          <% else %>
            <i class="fas fa-arrow-down text-red-500 mr-1"></i>
          <% end %>
          <span class="<%= @stats[:storage_used_change] > 0 ? 'text-green-500' : 'text-red-500' %>"><%= number_to_human_size(@stats[:storage_used_change], precision: 0) %></span>
          <span class="text-gray-500 ml-1">vs last month</span>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Main Content Grid -->
  <div class="grid lg:grid-cols-3 gap-8">
    <!-- Recent Documents -->
    <div class="lg:col-span-2">
      <div class="bg-white rounded-xl border border-gray-200">
        <div class="p-6 border-b border-gray-200">
          <div class="flex justify-between items-center">
            <h3 class="font-serif text-xl font-semibold text-gray-900">Recent Documents</h3>
            <%= link_to "View All", dashboard_documents_path, class: "text-brand-500 hover:text-brand-600 font-medium" %>
          </div>
        </div>
        <div class="p-6">
          <div class="space-y-4">
            <% @recent_documents.each do |document| %>
              <div class="flex items-center justify-between p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
                <div class="flex items-center space-x-4">
                  <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
                    <i class="fas fa-file-alt text-green-500"></i>
                  </div>
                  <div>
                    <h4 class="font-medium text-gray-900"><%= document.title %></h4>
                    <p class="text-sm text-gray-500">Uploaded by <%= document.staff.name %> • <%= time_ago_in_words(document.created_at) %> ago</p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Column -->
    <div>
      <!-- Staff Overview -->
      <div class="bg-white rounded-xl border border-gray-200 mb-6">
        <div class="p-6 border-b border-gray-200">
          <div class="flex justify-between items-center">
            <h3 class="font-serif text-xl font-semibold text-gray-900">Staff Overview</h3>
          </div>
        </div>
        <div class="p-6">
          <div class="space-y-4">
            <% @staff_overview.each do |staff| %>
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-3">
                  <% if staff.avatar.attached? %>
                    <%= image_tag staff.avatar, class: "w-10 h-10 rounded-full object-cover" %>
                  <% else %>
                    <div class="w-10 h-10 bg-purple-500 rounded-full flex items-center justify-center">
                      <span class="text-white text-sm font-medium"><%= staff.name.split.map(&:first).join %></span>
                    </div>
                  <% end %>
                  <div>
                    <p class="font-medium text-gray-900"><%= staff.name %></p>
                    <p class="text-sm text-gray-500"><%= staff.documents.count %> documents</p>
                  </div>
                </div>
                <span class="w-3 h-3 bg-yellow-500 rounded-full"></span>
              </div>
            <% end %>
          </div>
          <%= link_to "Manage All Staff →", dashboard_staff_index_path, class: "block text-center w-full pt-4 text-brand-500 hover:text-brand-600 font-medium text-sm" %>
        </div>
      </div>
    </div>
  </div>
</div>
