<!-- Main Content -->
<div class="max-w-7xl mx-auto px-6 py-8">
  <!-- Page Header -->
  <div class="mb-8">
    <div class="flex justify-between items-center">
      <div>
        <h2 class="font-serif text-3xl font-bold text-gray-900 mb-2">Staff Management</h2>
        <p class="text-gray-600">Manage university staff members and their access permissions</p>
      </div>
      <button class="bg-burgundy-500 text-white px-6 py-3 rounded-lg hover:bg-burgundy-600 transition-colors flex items-center space-x-2">
        <i class="fas fa-user-plus"></i>
        <span class="font-medium">Add Staff</span>
      </button>
    </div>
  </div>

  <!-- Filters and Search -->
  <div class="bg-white rounded-xl border border-gray-200 p-6 mb-8">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between space-y-4 md:space-y-0">
      <div class="flex flex-col md:flex-row md:items-center space-y-4 md:space-y-0 md:space-x-4">
        <div class="relative">
          <i class="fas fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
          <input type="text" placeholder="Search staff members..." class="pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-burgundy-500 focus:border-transparent w-full md:w-80">
        </div>
        <select class="px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-burgundy-500 focus:border-transparent">
          <option>All Status</option>
          <option>Active</option>
          <option>Inactive</option>
        </select>
      </div>
      <div class="flex items-center space-x-2">
        <button class="text-gray-600 hover:text-burgundy-500 p-2">
          <i class="fas fa-download"></i>
        </button>
      </div>
    </div>
  </div>

  <!-- Staff Table -->
  <div class="bg-white rounded-xl border border-gray-200 overflow-hidden">
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead class="bg-gray-50 border-b border-gray-200">
          <tr>
            <th class="text-left py-4 px-6 font-medium text-gray-900">Staff Member</th>
            <th class="text-left py-4 px-6 font-medium text-gray-900">Email</th>
            <th class="text-left py-4 px-6 font-medium text-gray-900">Status</th>
            <th class="text-left py-4 px-6 font-medium text-gray-900">Last Login</th>
            <th class="text-left py-4 px-6 font-medium text-gray-900">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @staffs.each do |staff| %>
          <tr class="hover:bg-gray-50">
            <td class="py-4 px-6"><%= staff.name %></td>
            <td class="py-4 px-6 text-gray-700"><%= staff.email %></td>
            <td class="py-4 px-6">
              <span class="bg-green-100 text-green-700 px-2 py-1 rounded-full text-xs font-medium"><%= staff.status.humanize %></span>
            </td>
            <td class="py-4 px-6 text-gray-700"><%= time_ago_in_words(staff.last_login) + " ago" if staff.last_login %></td>
            <td class="py-4 px-6">
              <div class="flex items-center space-x-2">
                <button class="text-blue-600 hover:text-blue-800 text-sm font-medium">
                  <i class="fas fa-key mr-1"></i>Reset
                </button>
                <button class="text-gray-600 hover:text-gray-800 text-sm font-medium">
                  <i class="fas fa-edit mr-1"></i>Edit
                </button>
                <button class="text-orange-600 hover:text-orange-800 text-sm font-medium">
                  <i class="fas fa-pause mr-1"></i>Deactivate
                </button>
                <button class="text-red-600 hover:text-red-800 text-sm font-medium">
                  <i class="fas fa-trash mr-1"></i>Delete
                </button>
              </div>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    <div class="border-t border-gray-200 bg-gray-50 px-6 py-4">
      <div class="flex items-center justify-between">
        <p class="text-sm text-gray-700">Showing 1 to 5 of 147 results</p>
        <div class="flex items-center space-x-2">
          <button class="px-3 py-2 text-sm text-gray-600 hover:text-burgundy-500">Previous</button>
          <button class="px-3 py-2 text-sm bg-burgundy-500 text-white rounded">1</button>
          <button class="px-3 py-2 text-sm text-gray-600 hover:text-burgundy-500">2</button>
          <button class="px-3 py-2 text-sm text-gray-600 hover:text-burgundy-500">3</button>
          <button class="px-3 py-2 text-sm text-gray-600 hover:text-burgundy-500">Next</button>
        </div>
      </div>
    </div>
  </div>
</div>
