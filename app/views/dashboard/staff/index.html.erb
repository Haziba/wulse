<!-- Main Content -->
<div class="max-w-7xl mx-auto px-6 py-8">
  <!-- Page Header -->
  <div class="mb-8">
    <div class="flex justify-between items-center">
      <div>
        <h2 class="font-serif text-3xl font-bold text-gray-900 mb-2">Staff Management</h2>
        <p class="text-gray-600">Manage university staff members and their access permissions</p>
      </div>
      <%= link_to new_dashboard_staff_path, data: { turbo_frame: "modal" }, class: "bg-brand-500 text-white px-6 py-3 rounded-lg hover:bg-brand-600 transition-colors flex items-center space-x-2" do %>
        <i class="fas fa-user-plus"></i>
        <span class="font-medium">Add Staff</span>
      <% end %>
    </div>
  </div>

  <%= turbo_frame_tag "modal" %>

  <!-- Filters and Search -->
  <div class="bg-white rounded-xl border border-gray-200 p-6 mb-8" data-controller="staff-search">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between space-y-4 md:space-y-0">
      <div class="flex flex-col md:flex-row md:items-center space-y-4 md:space-y-0 md:space-x-4">
        <div class="relative">
          <i class="fas fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
          <input type="text" placeholder="Search staff members..." class="pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent w-full md:w-80" data-staff-search-target="input" data-action="input->staff-search#searchDebounced">
        </div>
        <select class="px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent" data-staff-search-target="select" data-action="change->staff-search#search">
          <option>All Status</option>
          <option>Active</option>
          <option>Inactive</option>
        </select>
      </div>
    </div>
  </div>

  <%= turbo_frame_tag "staff_list" do %>
    <%= render "staff_list", staffs: @staffs, pagy: @pagy %>
  <% end %>
</div>
