<div class="max-w-3xl mx-auto px-6 py-8">
  <div class="bg-white rounded-xl border border-gray-200 p-8">
    <h1 class="font-serif text-3xl font-bold text-gray-900 mb-8">Edit Staff Member</h1>

    <%= form_with model: @staff, url: dashboard_staff_path(@staff), method: :patch, class: "space-y-6" do |f| %>
      <% if @staff.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <h2 class="text-red-800 font-semibold mb-2"><%= pluralize(@staff.errors.count, "error") %> prohibited this staff member from being saved:</h2>
          <ul class="list-disc list-inside text-red-700">
            <% @staff.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :name, "Full Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :name, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent", placeholder: "Enter full name" %>
      </div>

      <div>
        <%= f.label :email, "Email Address", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.email_field :email, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent", placeholder: "email@example.com" %>
      </div>

      <div>
        <%= f.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.select :status, [['Active', 'active'], ['Inactive', 'inactive']], {}, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent" %>
      </div>

      <div class="border-t border-gray-200 flex items-center justify-between pt-6">
        <%= link_to reset_password_dashboard_staff_path(@staff),
                    data: {
                      turbo_method: :patch,
                      turbo_confirm: "Are you sure you want to send this staff member a password reset email?"
                    },
                    class: "bg-gray-100 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-200 transition-colors inline-flex items-center space-x-2" do %>

          <i class="fas fa-key"></i>
          <span>Send Password Reset</span>
        <% end %>
      </div>

      <div class="flex items-center justify-between pt-6">
        <%= f.submit "Save Changes", class: "bg-brand-500 text-white px-6 py-2 rounded-lg hover:bg-brand-600 transition-colors font-medium disabled:opacity-50 disabled:cursor-not-allowed", data: { turbo_submits_with: "Saving..." } %>
      </div>
    <% end %>
  </div>
</div>
