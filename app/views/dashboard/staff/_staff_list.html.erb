<!-- Staff Table -->
<div class="bg-white rounded-xl border border-gray-200 overflow-hidden">
  <div class="overflow-x-auto">
    <table class="w-full">
      <thead class="bg-gray-50 border-b border-gray-200">
        <tr>
          <th class="text-left py-4 px-6 font-medium text-gray-900">Staff Member</th>
          <th class="text-left py-4 px-6 font-medium text-gray-900">Email</th>
          <th class="text-left py-4 px-6 font-medium text-gray-900">Status</th>
          <th class="text-left py-4 px-6 font-medium text-gray-900">Last Login</th>
          <th class="text-left py-4 px-6 font-medium text-gray-900">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% staffs.each do |staff| %>
        <tr class="hover:bg-gray-50">
          <td class="py-4 px-6"><%= staff.name %></td>
          <td class="py-4 px-6 text-gray-700"><%= staff.email %></td>
          <td class="py-4 px-6">
            <span class="bg-green-100 text-green-700 px-2 py-1 rounded-full text-xs font-medium"><%= staff.status.humanize %></span>
          </td>
          <td class="py-4 px-6 text-gray-700"><%= time_ago_in_words(staff.last_login) + " ago" if staff.last_login %></td>
          <td class="py-4 px-6">
            <div class="flex items-center space-x-2">
              <button class="text-blue-600 hover:text-blue-800 text-sm font-medium">
                <i class="fas fa-key mr-1"></i>Reset
              </button>
              <button class="text-gray-600 hover:text-gray-800 text-sm font-medium">
                <i class="fas fa-edit mr-1"></i>Edit
              </button>
              <button class="text-orange-600 hover:text-orange-800 text-sm font-medium">
                <i class="fas fa-pause mr-1"></i>Deactivate
              </button>
              <button class="text-red-600 hover:text-red-800 text-sm font-medium">
                <i class="fas fa-trash mr-1"></i>Delete
              </button>
            </div>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Pagination -->
  <div class="border-t border-gray-200 bg-gray-50 px-6 py-4">
    <div class="flex items-center justify-between">
      <p class="text-sm text-gray-700">
        Showing <%= pagy.from %> to <%= pagy.to %> of <%= pagy.count %> results
      </p>
      <div class="flex items-center space-x-2">
        <% if pagy.prev %>
          <%= link_to "Previous", dashboard_staff_index_path(page: pagy.prev), class: "px-3 py-2 text-sm text-gray-600 hover:text-burgundy-500", data: { turbo_frame: "staff_list", turbo_action: "advance" } %>
        <% else %>
          <span class="px-3 py-2 text-sm text-gray-400 cursor-not-allowed">Previous</span>
        <% end %>

        <% pagy.series.each do |item| %>
          <%# Display the item's type properly %>
          <% if item.is_a?(Integer) %>
            <%= link_to item, dashboard_staff_index_path(page: item), class: "px-3 py-2 text-sm #{item == pagy.page ? 'bg-burgundy-500 text-white rounded' : 'text-gray-600 hover:text-burgundy-500'}", data: { turbo_frame: "staff_list", turbo_action: "advance" } %>
          <% elsif item.is_a?(String) %>
            <span class="px-3 py-2 text-sm text-gray-400"><%= item %></span>
          <% elsif item == :gap %>
            <span class="px-3 py-2 text-sm text-gray-400">...</span>
          <% end %>
        <% end %>

        <% if pagy.next %>
          <%= link_to "Next", dashboard_staff_index_path(page: pagy.next), class: "px-3 py-2 text-sm text-gray-600 hover:text-burgundy-500", data: { turbo_frame: "staff_list", turbo_action: "advance" } %>
        <% else %>
          <span class="px-3 py-2 text-sm text-gray-400 cursor-not-allowed">Next</span>
        <% end %>
      </div>
    </div>
  </div>
</div>
