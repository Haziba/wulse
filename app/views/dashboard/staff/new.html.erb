<%= turbo_frame_tag "modal" do %>
  <dialog data-controller="modal" data-action="turbo:submit-end->modal#submitEnd" class="rounded-xl p-0 backdrop:bg-black backdrop:bg-opacity-50 max-w-2xl w-full">
  <div class="bg-white rounded-xl p-8">
    <div class="flex justify-between items-center mb-6">
      <h3 class="font-serif text-2xl font-semibold text-gray-900">Add New Staff Member</h3>
      <button data-action="click->modal#close" class="text-gray-400 hover:text-gray-600">
        <i class="fas fa-times text-xl"></i>
      </button>
    </div>

    <%= form_with model: @staff, url: dashboard_staff_index_path, class: "space-y-6" do |f| %>
      <div class="grid md:grid-cols-2 gap-6">
        <div>
          <%= f.label :name, "Full Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :name, required: true, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-burgundy-500 focus:border-transparent" %>
          <% if @staff.errors[:name].any? %>
            <p class="text-red-600 text-sm mt-1"><%= @staff.errors[:name].first %></p>
          <% end %>
        </div>

        <div>
          <%= f.label :email, "Email Address", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.email_field :email, required: true, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-burgundy-500 focus:border-transparent" %>
          <% if @staff.errors[:email].any? %>
            <p class="text-red-600 text-sm mt-1"><%= @staff.errors[:email].first %></p>
          <% end %>
        </div>
      </div>

      <div class="flex space-x-4 pt-6">
        <button type="button" data-action="click->modal#close" class="flex-1 bg-gray-200 text-gray-800 py-3 px-4 rounded-lg hover:bg-gray-300 font-medium">Cancel</button>
        <%= f.submit "Add Staff Member", class: "flex-1 bg-burgundy-500 text-white py-3 px-4 rounded-lg hover:bg-burgundy-600 font-medium" %>
      </div>
    <% end %>
  </div>
</dialog>
<% end %>
