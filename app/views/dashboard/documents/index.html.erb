<!-- Main Content -->
<%= turbo_stream_from "institution_#{Current.institution.id}" %>

<div class="max-w-7xl mx-auto px-6 py-8">
  <!-- Page Header -->
  <div class="mb-8">
    <div class="flex justify-between items-center">
      <div>
        <h2 class="font-serif text-3xl font-bold text-gray-900 mb-2">Document Management</h2>
        <p class="text-gray-600">Manage educational resources and documents</p>
      </div>
      <%= link_to new_dashboard_document_path, data: { turbo_frame: "modal" }, class: "bg-brand-500 text-white px-6 py-3 rounded-lg hover:bg-brand-600 transition-colors flex items-center space-x-2" do %>
        <i class="fas fa-plus"></i>
        <span class="font-medium hidden md:inline">Add Document</span>
      <% end %>
    </div>
  </div>

  <%= turbo_frame_tag "modal" %>

  <!-- Filters and Search -->
  <div class="bg-white rounded-xl border border-gray-200 p-6 mb-8" data-controller="document-search" data-document-search-frame-value="document_list">
    <%= form_with url: dashboard_documents_path,
                  method: :get,
                  data: { turbo_frame: "document_list", turbo_action: "advance", controller: "debounce-submit", action: "submit->debounce-submit#submit" },
                  class: "flex flex-col md:flex-row md:items-center md:justify-between space-y-4 md:space-y-0" do %>
      <div class="relative w-full">
        <i class="fas fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
          <%= text_field_tag :search, params[:search],
            placeholder: "Search documents...",
            class: "pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent w-full md:w-80",
            data: { action: "input->debounce-submit#debouncedSubmit" } %>
      </div>
    <% end %>
  </div>

  <%= turbo_frame_tag "document_list" do %>
    <%= render "document_list", documents: @documents, pagy: @pagy %>
  <% end %>
</div>
