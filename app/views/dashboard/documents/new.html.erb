<%= turbo_frame_tag "modal" do %>
  <dialog data-controller="modal" data-action="turbo:submit-end->modal#submitEnd" class="rounded-xl p-0 backdrop:bg-black backdrop:bg-opacity-50 max-w-2xl w-full">
  <div class="bg-white rounded-xl p-8 max-h-[90vh] overflow-y-auto">
    <div class="flex justify-between items-center mb-6">
      <h3 class="font-serif text-2xl font-semibold text-gray-900">Add New Document</h3>
      <button data-action="click->modal#close" class="text-gray-400 hover:text-gray-600">
        <i class="fas fa-times text-xl"></i>
      </button>
    </div>

    <%= form_with model: @document, url: dashboard_documents_path, class: "space-y-6" do |f| %>
      <% if @document.errors[:base].any? %>
        <div class="text-red-600 text-sm">
          <% @document.errors[:base].each do |error| %>
            <p><%= error %></p>
          <% end %>
        </div>
      <% end %>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Upload Document</label>
        <%= f.file_field :file, required: true, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent", accept: "application/pdf,application/epub+zip" %>
        <p class="text-gray-500 text-sm mt-1">Accepts PDF and EPUB files</p>
        <% if @document.errors[:file].any? %>
          <p class="text-red-600 text-sm mt-1"><%= @document.errors[:file].first %></p>
        <% end %>
      </div>

      <div class="border-t pt-6">
        <h4 class="font-medium text-gray-900 mb-4">Document Metadata</h4>
        <%= render "metadata_fields", metadata: @metadata %>
      </div>

      <div class="flex space-x-4 pt-6">
        <button type="button" data-action="click->modal#close" class="flex-1 bg-gray-200 text-gray-800 py-3 px-4 rounded-lg hover:bg-gray-300 font-medium">Cancel</button>
        <%= f.submit "Add Document", class: "flex-1 bg-brand-500 text-white py-3 px-4 rounded-lg hover:bg-brand-600 font-medium disabled:opacity-50 disabled:cursor-not-allowed", data: { turbo_submits_with: "Uploading..." } %>
      </div>
    <% end %>
  </div>
</dialog>
<% end %>
