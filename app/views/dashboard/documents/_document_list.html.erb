<!-- Document Table -->
<div class="bg-white rounded-xl border border-gray-200 overflow-hidden">
  <div class="overflow-x-auto">
    <table class="w-full">
      <thead class="bg-gray-50 border-b border-gray-200">
        <tr>
          <th class="text-left py-4 px-6 font-medium text-gray-900">Title</th>
          <th class="text-left py-4 px-6 font-medium text-gray-900">Author</th>
          <th class="text-left py-4 px-6 font-medium text-gray-900">Last Updated</th>
          <th class="text-left py-4 px-6 font-medium text-gray-900">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% documents.each do |document| %>
        <tr class="hover:bg-gray-50">
          <td class="py-4 px-6"><%= document.name %></td>
          <td class="py-4 px-6 text-gray-700"><%= document.staff&.name || "Unknown" %></td>
          <td class="py-4 px-6 text-gray-700"><%= time_ago_in_words(document.updated_at) + " ago" if document.updated_at %></td>
          <td class="py-4 px-6">
            <div class="flex items-center space-x-2">
              <button class="text-blue-600 hover:text-blue-800 text-sm font-medium">
                <i class="fas fa-eye mr-1"></i>View
              </button>
              <%= link_to edit_dashboard_document_path(document), class: "text-gray-600 hover:text-gray-800 text-sm font-medium", data: { turbo_frame: "_top" } do %>
                <i class="fas fa-edit mr-1"></i>Edit
              <% end %>
              <button class="text-red-600 hover:text-red-800 text-sm font-medium">
                <i class="fas fa-trash mr-1"></i>Delete
              </button>
            </div>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Pagination -->
  <div class="border-t border-gray-200 bg-gray-50 px-6 py-4">
    <div class="flex items-center justify-between">
      <p class="text-sm text-gray-700">
        Showing <%= pagy.from %> to <%= pagy.to %> of <%= pagy.count %> results
      </p>
      <div class="flex items-center space-x-2">
        <% if pagy.prev %>
          <%= link_to "Previous", dashboard_documents_path(page: pagy.prev), class: "px-3 py-2 text-sm text-gray-600 hover:text-brand-500", data: { turbo_frame: "document_list", turbo_action: "advance" } %>
        <% else %>
          <span class="px-3 py-2 text-sm text-gray-400 cursor-not-allowed">Previous</span>
        <% end %>

        <% pagy.series.each do |item| %>
          <%# Display the item's type properly %>
          <% if item.is_a?(Integer) %>
            <%= link_to item, dashboard_documents_path(page: item), class: "px-3 py-2 text-sm #{item == pagy.page ? 'bg-brand-500 text-white rounded' : 'text-gray-600 hover:text-brand-500'}", data: { turbo_frame: "document_list", turbo_action: "advance" } %>
          <% elsif item.is_a?(String) %>
            <span class="px-3 py-2 text-sm text-gray-400"><%= item %></span>
          <% elsif item == :gap %>
            <span class="px-3 py-2 text-sm text-gray-400">...</span>
          <% end %>
        <% end %>

        <% if pagy.next %>
          <%= link_to "Next", dashboard_documents_path(page: pagy.next), class: "px-3 py-2 text-sm text-gray-600 hover:text-brand-500", data: { turbo_frame: "document_list", turbo_action: "advance" } %>
        <% else %>
          <span class="px-3 py-2 text-sm text-gray-400 cursor-not-allowed">Next</span>
        <% end %>
      </div>
    </div>
  </div>
</div>
