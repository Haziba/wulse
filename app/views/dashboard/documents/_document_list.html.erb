<!-- Document Table -->
<div class="bg-white rounded-xl border border-gray-200 overflow-hidden">
  <div class="overflow-x-auto">
    <table class="w-full table-fixed">
      <thead class="bg-gray-50 border-b border-gray-200">
        <tr>
          <th class="text-left py-4 px-6 font-medium text-gray-900 w-2/5">Title</th>
          <th class="text-left py-4 px-6 font-medium text-gray-900 w-1/5 hidden md:table-cell">Uploader</th>
          <th class="text-left py-4 px-6 font-medium text-gray-900 w-1/5 hidden lg:table-cell">Last Updated</th>
          <th class="text-left py-4 px-6 font-medium text-gray-900 w-1/5">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% documents.each do |document| %>
        <tr class="hover:bg-gray-50" id="document_<%= document.id %>">
          <td class="py-4 px-6">
            <div class="flex items-center space-x-3">
              <div class="w-10 h-14 rounded flex-shrink-0 overflow-hidden">
                <% if document.preview_image.attached? %>
                  <%= image_tag document.preview_image, class: "w-full h-full object-cover" %>
                <% else %>
                  <div class="w-full h-full bg-gray-100 flex items-center justify-center">
                    <i class="fas fa-file-alt text-gray-400"></i>
                  </div>
                <% end %>
              </div>
              <%= link_to document.title, dashboard_document_path(document), class: "text-brand-700 hover:text-brand-800 font-medium block truncate", data: { turbo_frame: "_top" } %>
            </div>
          </td>
          <td class="py-6 px-6 hidden md:table-cell">
            <%= link_to document.staff.name, dashboard_staff_path(document.staff), class: "text-brand-700 hover:text-brand-800 block truncate", data: { turbo_frame: "_top" } %>
          </td>
          <td class="py-6 px-6 text-gray-700 whitespace-nowrap hidden lg:table-cell">
            <%= time_ago_in_words(document.updated_at) + " ago" if document.updated_at %>
          </td>
          <td class="py-6 px-6">
            <div class="flex items-center space-x-4">
              <%= link_to edit_dashboard_document_path(document), class: "text-gray-600 hover:text-gray-800 text-sm font-medium whitespace-nowrap", data: { turbo_frame: "_top" } do %>
                <i class="fas fa-edit mr-1"></i><span class="hidden lg:inline">Edit</span>
              <% end %>
              <%= button_to dashboard_document_path(document, request.query_parameters.merge(page: pagy.page)), method: :delete, class: "text-red-600 hover:text-red-800 text-sm font-medium whitespace-nowrap", data: { turbo_confirm: "Are you sure you want to delete this document?" } do %>
                <i class="fas fa-trash mr-1"></i><span class="hidden lg:inline">Delete</span>
              <% end %>
            </div>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Pagination -->
  <div class="border-t border-gray-200 bg-gray-50 px-6 py-4">
    <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="text-sm text-gray-700">
        Showing <%= pagy.from %> to <%= pagy.to %> of <%= pagy.count %> results
      </p>
      <div class="flex items-center space-x-1 sm:space-x-2">
        <% if pagy.prev %>
          <%= link_to dashboard_documents_path(request.query_parameters.merge(page: pagy.prev)), class: "px-3 py-2 text-sm text-gray-600 hover:text-brand-500", data: { turbo_frame: "document_list", turbo_action: "advance" } do %>
            <i class="fas fa-chevron-left sm:hidden"></i>
            <span class="hidden sm:inline">Previous</span>
          <% end %>
        <% else %>
          <span class="px-3 py-2 text-sm text-gray-500 cursor-not-allowed" aria-disabled="true">
            <i class="fas fa-chevron-left sm:hidden" aria-hidden="true"></i>
            <span class="hidden sm:inline">Previous</span>
          </span>
        <% end %>

        <% pagy.series.each do |item| %>
          <%# Display the item's type properly %>
          <% if item.is_a?(Integer) %>
            <%= link_to item, dashboard_documents_path(request.query_parameters.merge(page: item)), class: "px-2 sm:px-3 py-2 text-sm #{item == pagy.page ? 'bg-brand-500 text-white rounded' : 'text-gray-600 hover:text-brand-500'}", data: { turbo_frame: "document_list", turbo_action: "advance" } %>
          <% elsif item.is_a?(String) %>
            <span class="px-2 sm:px-3 py-2 text-sm text-gray-500"><%= item %></span>
          <% elsif item == :gap %>
            <span class="px-1 sm:px-2 text-sm text-gray-500" aria-hidden="true">...</span>
          <% end %>
        <% end %>

        <% if pagy.next %>
          <%= link_to dashboard_documents_path(request.query_parameters.merge(page: pagy.next)), class: "px-3 py-2 text-sm text-gray-600 hover:text-brand-500", data: { turbo_frame: "document_list", turbo_action: "advance" } do %>
            <i class="fas fa-chevron-right sm:hidden"></i>
            <span class="hidden sm:inline">Next</span>
          <% end %>
        <% else %>
          <span class="px-3 py-2 text-sm text-gray-500 cursor-not-allowed" aria-disabled="true">
            <i class="fas fa-chevron-right sm:hidden" aria-hidden="true"></i>
            <span class="hidden sm:inline">Next</span>
          </span>
        <% end %>
      </div>
    </div>
  </div>
</div>
