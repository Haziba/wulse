<% if defined?(notice) && notice.present? %>
  <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-lg shadow-lg mb-4">
    <%= notice %>
  </div>
<% end %>
<% if defined?(alert) && alert.present? %>
  <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg shadow-lg mb-4">
    <%= alert %>
  </div>
<% end %>
