<!-- Toast Flash Messages -->
<% if flash[:notice] || flash[:alert] %>
  <%
    message = flash[:notice] || flash[:alert]
    is_notice = flash[:notice].present?
    color = is_notice ? "green" : "red"
    icon = is_notice ? "check" : "exclamation-circle"
  %>

  <div data-controller="toast" class="bg-white border-l-4 border-<%= color %>-500 rounded-lg shadow-lg p-4 mb-4 flex items-center space-x-3 animate-slide-up">
    <div class="flex-shrink-0">
      <div class="w-10 h-10 bg-<%= color %>-100 rounded-full flex items-center justify-center">
        <i class="fas fa-<%= icon %> text-<%= color %>-500"></i>
      </div>
    </div>
    <div class="flex-1">
      <p class="font-medium text-gray-900"><%= message %></p>
    </div>
    <button data-action="click->toast#dismiss" class="text-gray-400 hover:text-gray-600 transition-colors">
      <i class="fas fa-times"></i>
    </button>
  </div>
<% end %>

<style>
  @keyframes slideUp {
    from {
      transform: translateY(100px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  @keyframes slideDown {
    from {
      transform: translateY(0);
      opacity: 1;
    }
    to {
      transform: translateY(100px);
      opacity: 0;
    }
  }

  .animate-slide-up {
    animation: slideUp 0.3s ease-out;
  }

  .animate-slide-down {
    animation: slideDown 0.3s ease-out;
  }
</style>
